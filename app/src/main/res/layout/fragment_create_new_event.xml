<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateNewEventFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gray_new_transfer"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:text="@string/new_transfer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="#D9D9D9"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/new_expense" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gray_new_expense"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:text="@string/new_expense"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="gone"
        app:backgroundTint="#D9D9D9"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/new_expense" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_expense_button"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:text="@string/new_expense"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/new_expense"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_transfer_button"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:text="@string/new_transfer"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/new_expense"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectParticipant"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginBottom="119dp"
        android:fontFamily="@font/roboto"
        android:text="@string/select_participant"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="gone"
        app:backgroundTint="#BEDCFF"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFinish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gray"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/new_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="@string/new_event"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/headers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAll"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:fontFamily="@font/roboto"
        android:text="@string/all_in_button"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="#FFBEFD"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="#839C27B0"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTwo"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout1"
        app:layout_constraintTop_toTopOf="@+id/buttonTwo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonTwo"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto"
        android:text="@string/two_button"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="#FFE1BE"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="#6DFF9800"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout1"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMoreOptions"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/more_options_button"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="#BEDCFF"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="#AB568EFC"
        app:layout_constraintStart_toStartOf="@+id/buttonAll"
        app:layout_constraintTop_toBottomOf="@+id/buttonAll" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPayFor"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/pay_for"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        android:visibility="visible"
        app:backgroundTint="#A5ECA7"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="#AE4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/buttonTwo"
        app:layout_constraintTop_toBottomOf="@+id/buttonTwo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFinish"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/finish"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/plain_text"
        app:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="top"
            android:hint="@string/enter_description"
            android:maxLength="150"
            android:maxLines="3"
            android:textSize="@dimen/plain_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:maxWidth="488dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_expense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:hint="@string/enter_cost"
            android:inputType="numberDecimal"
            android:maxWidth="488dp"
            android:maxLength="150"
            android:textSize="@dimen/plain_text" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>